<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_all_folders"
    app:startDestination="@id/foldersFragment">

    <fragment
        android:id="@+id/foldersFragment"
        android:name="com.example.videoplayer.fragments.FoldersFragment"
        android:label="fragment_folders"
        tools:layout="@layout/fragment_folders" >
        <action
            android:id="@+id/action_foldersFragment_to_openFolderFragment"
            app:destination="@id/openFolderFragment" />
    </fragment>
    <fragment
        android:id="@+id/openFolderFragment"
        android:name="com.example.videoplayer.fragments.OpenFolderFragment"
        android:label="fragment_open_folder"
        tools:layout="@layout/fragment_open_folder" >
        <argument
            android:name="folderName"
            app:argType="string" />
    </fragment>
</navigation>